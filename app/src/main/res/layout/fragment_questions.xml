<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="Vrai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="294dp"
            tools:layout_editor_absoluteX="54dp" android:id="@+id/trueButton"
            android:layout_above="@+id/reponse" android:layout_alignStart="@+id/question"/>
    <Button
            android:text="Faux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="294dp"
            tools:layout_editor_absoluteX="224dp" android:id="@+id/falseButton"
            android:layout_marginEnd="63dp"
            android:layout_above="@+id/reponse" android:layout_alignParentEnd="true"/>
    <TextView
            android:text="Le saviez-vous ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginTop="21dp" android:textSize="36sp"
            android:layout_marginStart="40dp" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/textView2" android:layout_marginStart="12dp" android:layout_marginTop="64dp"
            android:id="@+id/question" android:textSize="24sp" android:layout_alignEnd="@+id/textView2"/>
    <TextView
            android:text="TextView"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:id="@+id/reponse"
            android:textSize="18sp"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_lightbulb_outline_black_24dp"
            android:id="@+id/imageView2"
            android:layout_alignBottom="@+id/textView2" android:layout_toEndOf="@+id/textView2"
            android:layout_marginStart="25dp" android:layout_alignTop="@+id/textView2"/>
</RelativeLayout>